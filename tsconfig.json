// tsconfig.json
// Strict mode is enabled. No unsafe compiler options. This helps prevent many classes of bugs and vulnerabilities.
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "preserveSymlinks": true,
    "baseUrl": "./src",
    "paths": {
      "/*": ["./*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ]
}